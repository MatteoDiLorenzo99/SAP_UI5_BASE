<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:sf="sap.ui.comp.smartfield"
    xmlns:form="sap.ui.comp.smartform"
    xmlns:smartmultiedit="sap.ui.comp.smartmultiedit"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

    <Dialog
        id="UpdateMultipleRowDialog"
        title="Aggiorna righe multiple"
        draggable="true"
        resizable="true"
        contentWidth="600px"
        stretch="{device>/system/phone}"
        afterClose=".onDialogClose"
        class="sapUiContentPadding"
        horizontalScrolling="false">

        <content>
            <smartmultiedit:Container
                id="multiEditContainer"
                entitySet="ZCDS_TRAINS_VIDEO"
                app:defaultDropDownDisplayBehaviour="descriptionOnly">

                <smartmultiedit:layout>
                    <form:SmartForm editable="true" ignoredFields="URL,Phone,Salary">

                        <form:layout>
                            <form:Layout
                                labelSpanM="12"
                                labelSpanL="12"
                                labelSpanXL="12"/>
                        </form:layout>

                        <form:groups>
                            <form:Group>

                                <form:GroupElement>
                                    <form:elements>
                                        <smartmultiedit:Field
                                            propertyName="StazionePartenza"
                                            useApplyToEmptyOnly="true"/>
                                    </form:elements>
                                </form:GroupElement>

                                <form:GroupElement>
                                    <form:elements>
                                        <smartmultiedit:Field
                                            propertyName="StazioneArrivo"/>
                                    </form:elements>
                                </form:GroupElement>

                            </form:Group>
                        </form:groups>

                    </form:SmartForm>
                </smartmultiedit:layout>

            </smartmultiedit:Container>
        </content>

        <beginButton>
            <Button
                text="Annulla"
                type="Reject"
                press=".onCancel"/>
        </beginButton>

        <endButton>
            <Button
                text="OK"
                type="Accept"
                press=".onConfirm"/>
        </endButton>

    </Dialog>
</core:FragmentDefinition>

