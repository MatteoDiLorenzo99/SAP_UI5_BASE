<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="DeleteRowDialog"
        title="Conferma eliminazione"
        draggable="true"
        resizable="true"
        stretch="{device>/system/phone}"
        afterClose=".onDialogClose">

        <content>
            <Text id="DeleteMessage" text=""/>
        </content>

        <buttons>
            <Button
                text="Annulla"
                type="Reject"
                press=".onCancel"/>

            <Button
                text="Elimina versione BATCH"
                press=".onConfirmBatchDelete"/>

            <Button
                text="Elimina UNO X UNO"
                type="Accept"
                press=".onConfirmSingleDelete"/>
        </buttons>

    </Dialog>
</core:FragmentDefinition>
