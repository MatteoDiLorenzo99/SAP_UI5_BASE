<core:FragmentDefinition
    xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:sf="sap.ui.comp.smartfield"
    xmlns:form="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield">

    <Dialog
        id="NewRowDialog"
        title="Crea nuova riga"
        draggable="true"
        resizable="true"
        stretch="{device>/system/phone}"
        afterClose=".onDialogClose">


      <form:SmartForm id="CreateSmartform" editable="true" >
        <form:Group>
            <form:GroupElement label="Numero treno">
                <sf:SmartField value="{NumeroTreno}" entitySet="ZCDS_TRAINS_VIDEO" editable="true" id="NewNumeroTreno"/>
            </form:GroupElement>
            <form:GroupElement label="Stazione partenza">
                <sf:SmartField value="{StazionePartenza}" entitySet="ZCDS_TRAINS_VIDEO" editable="true" id="NewStazionePartenza"/>
            </form:GroupElement>
            <form:GroupElement label="Stazione arrivo">
                <sf:SmartField value="{StazioneArrivo}" entitySet="ZCDS_TRAINS_VIDEO" editable="true" id="NewStazioneArrivo"/>
            </form:GroupElement>
        </form:Group>
    </form:SmartForm>

        <beginButton>
            <Button
                text="Annulla"
                type="Reject"
                press=".onCancel"/>
        </beginButton>

        <endButton>
            <Button
                text="OK"
                type="Accept"
                press=".onConfirm"/>
        </endButton>

    </Dialog>
</core:FragmentDefinition>


